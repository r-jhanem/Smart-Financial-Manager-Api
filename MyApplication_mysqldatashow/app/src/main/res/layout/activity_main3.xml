<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity3">


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="262dp"
        android:ems="10"
        android:hint="Nama Pemesan"
        android:maxLines="1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etNoTlp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="397dp"
        android:ems="10"
        android:hint="Nomor Tlp"
        android:maxLines="1"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/itemSpinnerOne"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:entries="@array/menu_spinner"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/etJmlOne"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Menu 1"
            android:maxLines="1"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Spinner
            android:id="@+id/itemSpinnerTwo"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:entries="@array/menu_spinner"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/etJmlTwo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/itemSpinnerTwo"
            android:ems="10"
            android:hint="Menu 2"
            android:maxLines="1"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_button_primary"
        android:text="Cetak Pesanan"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:onClick="add_log"/>
</RelativeLayout>

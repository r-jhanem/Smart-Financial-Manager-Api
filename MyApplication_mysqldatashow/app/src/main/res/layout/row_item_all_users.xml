<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_All_Users"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:id="@+id/Ly_Section_CardView_All_Users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text_UserNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right"
                android:padding="3dp"
                android:textColor="#a37838"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Text_UserNam_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right"
                android:padding="3dp"
                android:textColor="#0277BD"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/Img_Avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#a37838"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Text_RegDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="5dp"
                android:textColor="#000"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/imageButton_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="طباعة"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView5_styte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Text_Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoLink="all"
                android:background="@drawable/stclicl"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#2196F3"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/Text_Email_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="all"
                android:background="@drawable/stclicl"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="#2196F3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button3_oktyp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/butt_clalety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الغاء"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/avatar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center">

            <TextView
                android:id="@+id/Text_RegDate_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="1000"
                android:textColor="#000"
                android:textSize="18sp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/img_Avata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:background="@drawable/ic_baseline_more_horiz_24"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/imageButton_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                card_view:srcCompat="@android:drawable/checkbox_on_background" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"

    android:layout_weight="0"
    android:orientation="vertical"
    tools:context=".All_Users_list">



    <LinearLayout
        android:id="@+id/liner_user_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="0"
        android:background="#0B8A9A"
        android:orientation="horizontal"
        android:visibility="gone">


        <Button
            android:id="@+id/butt6689"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="لتفاصيل "
            android:textSize="8sp" />


        <Button
            android:id="@+id/butt_90"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="المبلغ" />

        <Button
            android:id="@+id/butt_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="الحاله" />

        <Button
            android:id="@+id/butt__7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="النوع" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="0"
        android:background="#0B8A9A"
        android:orientation="horizontal"
        android:visibility="visible">


        <Button
            android:id="@+id/butt666"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="الاسم "
            android:textSize="8sp" />


        <Button
            android:id="@+id/butt_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="عليه" />

        <Button
            android:id="@+id/butt__2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="له" />

        <Button
            android:id="@+id/butt__5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="الرصيد" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/iner_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="0"
        android:visibility="gone"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/TextDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_date_range_24" />

        <TextView
            android:id="@+id/TextDateto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_date_range_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_id"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="true"
        android:importantForAccessibility="yes"
        android:scrollbars="vertical"

        android:verticalScrollbarPosition="left">


    </ListView>
</LinearLayout>
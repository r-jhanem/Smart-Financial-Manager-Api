<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".MainActivity4_drop">

    <LinearLayout
        android:id="@+id/liner_20"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0"

        android:background="@drawable/jhk"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="السند الالكتروني"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/design_default_color_primary_variant"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_subtitle" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/liner_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Spinner
            android:id="@+id/spinner_addshow"
            style="2pd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stclicl_2"
            android:gravity="bottom" />

        <Spinner
            android:id="@+id/spinner_addshow_2"
            style="2pd"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stclicl_2"
            android:gravity="bottom" />


        <Spinner
            android:id="@+id/spinner_addshow_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stclicl_2"
            android:gravity="bottom"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/spinner_addshow_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stclicl_2"
            android:gravity="bottom"
            android:visibility="visible" />
    </LinearLayout>
    <!--  <include
        layout="@layout/content_main"
        android:background="#B0F484" />!-->
    <LinearLayout
        android:id="@+id/sol_user"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="0"
        android:background="#0B8A9A"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#0B8A9A"
            android:orientation="vertical"
            android:visibility="visible">


            <Button
                android:id="@+id/butt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/emple_24"
                android:text="الحساب"
                android:textSize="8dp" />


            <Button
                android:id="@+id/butt_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#0B8A9A"
            android:orientation="vertical"
            android:visibility="visible">


            <Button
                android:id="@+id/butt44"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_arrow_drop_up_24"
                android:text="لكم"
                android:textSize="8sp" />


            <Button
                android:id="@+id/butt_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#0B8A9A"
            android:orientation="vertical"
            android:visibility="visible">


            <Button
                android:id="@+id/butt5556"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="عليكم"
                android:textSize="8sp" />


            <Button
                android:id="@+id/butt_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#0B8A9A"
            android:orientation="vertical"
            android:visibility="visible">


            <Button
                android:id="@+id/butt666"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_info_details"
                android:text="الكل"
                android:textSize="8sp" />


            <Button
                android:id="@+id/butt_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iner_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="0"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/TextDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_date_range_24" />

        <TextView
            android:id="@+id/TextDateto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_date_range_24" />

        <TextView
            android:visibility="gone"
            android:id="@+id/TextDateF_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/pdf_imag" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner_comle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/liner_card_1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_1_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView_show_open_22"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_baseline_check_circle_24"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            android:text="السندات الجاهزة"
                            android:textColor="#3797E3"
                            android:textSize="18sp" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_1_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView_show_open_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_baseline_cancel_24_false"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            android:text="السندات  المرفوضة"
                            android:textColor="#3797E3" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_card_2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="0"
                    android:background="@color/white"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView_show_open_224"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_baseline_remove_circle_24"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView444"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            android:text="السندات المعلقه"
                            android:textColor="#3797E3"
                            android:textSize="18sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/imageView_show_open_23"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_baseline_receipt_lg_24"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView43"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            android:text="العمليات الاخيرة"
                            android:textColor="#3797E3" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <ListView
        android:id="@+id/list_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="0"
        android:clickable="true"
        android:foregroundGravity="center"
        android:src="@drawable/icadd_24"
        android:visibility="gone" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_naguftion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="0"
        app:itemBackground="?attr/colorSecondaryVariant"

        app:itemIconTint="@color/white"
        app:itemTextColor="@color/card_selected"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</LinearLayout>